<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="50dp"
  android:padding="6dip"
  android:orientation="vertical"
  >
    <com.di.boke.core.widget.BaseTextView
      android:id="@+id/pasture_pasture_list_layout_name_value"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:gravity="center_vertical"
      style="@style/fieldSet_label_textView_style"
      />
    
    <LinearLayout
      android:id="@+id/pasture_pasture_list_layout_detail_section"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      >
      <!-- Divider -->
      <View
         android:layout_height="@dimen/divider_layout_height"
         android:layout_width="match_parent"
         style="@style/divider_style"
         />
      <LinearLayout
        android:id="@+id/pasture_pasture_list_area_fieldset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fieldSet_container_style"
        android:orientation="vertical"
        >
        <com.di.boke.core.widget.BaseTextView
          android:id="@+id/pasture_pasture_list_layout_land_area_label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/pasture_pasture_list_layout_land_area_label"
          style="@style/fieldSet_label_textView_style"
          />
        <com.di.boke.core.widget.BaseTextView
          android:id="@+id/pasture_pasture_list_layout_land_area_value"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/fieldSet_value_textView_style"
          />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/pasture_pasture_list_image_fieldset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fieldSet_container_style"
        android:orientation="vertical"
        >
        <ImageView
          android:id="@+id/pasture_pasture_list_layout_icon_image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/pasture_pasture_list_layout_first_nav_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        style="@style/navigationSection_style"
        >
        <!-- Cancel Button -->
        <com.di.boke.core.widget.BaseButton
          android:id="@+id/pasture_pasture_list_layout_cancel"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/pasture_pasture_list_layout_cancel"
          style="@style/button_style"
          />
        <!-- Edit Button -->
        <com.di.boke.core.widget.BaseButton
          android:id="@+id/pasture_pasture_list_layout_edit"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/pasture_pasture_list_layout_edit"
          style="@style/button_style"
          />
    </LinearLayout>
  </LinearLayout>
    

</LinearLayout>