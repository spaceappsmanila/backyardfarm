<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.di.boke"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.di.boke.UserLoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.di.boke.home.activity.MenuListActivity"
            android:label="@string/title_activity_menu_list" >
        </activity>
        <!-- Guide -->
        <activity
            android:name="com.di.boke.guide.activity.ViewGuideViewsActivity"
            android:label="@string/title_activity_view_guide_views" >
        </activity>
        <activity
            android:name="com.di.boke.guide.activity.ViewGuideDetailActivity"
            android:label="@string/title_activity_view_guide_detail" >
        </activity>

        <!-- Pasture -->
        <activity
            android:name="com.di.boke.pasture.activity.ViewPastureViewsActivity"
            android:label="@string/title_activity_view_pasture_views" >
        </activity>
        <activity
            android:name="com.di.boke.pasture.activity.AddPastureActivity"
            android:label="@string/title_activity_add_pasture" >
        </activity>
        <activity
            android:name="com.di.boke.ViewOwnerDetailsActivity"
            android:label="@string/title_activity_view_owner_details" >
        </activity>
    </application>

</manifest>